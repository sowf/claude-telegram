# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Claude API Key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Allowed Telegram usernames (comma-separated, without @)
ALLOWED_USERNAMES=username1,username2,username3

# Claude Model (optional, default: claude-3-5-sonnet-20241022)
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Max tokens for Claude response (optional, default: 4096)
MAX_TOKENS=4096
